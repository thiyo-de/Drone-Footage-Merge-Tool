{
    "appId": "com.internal.dronevidmerge",
    "productName": "DroneMerge",
    "directories": {
        "output": "dist",
        "buildResources": "build"
    },
    "files": [
        "src/**/*",
        "package.json"
    ],
    "win": {
        "target": "nsis",
        "icon": "build/icon.ico"
    },
    "mac": {
        "target": "dmg",
        "icon": "build/icon.icns"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowToChangeInstallationDirectory": true
    }
}