{
    "appId": "com.internal.dronevidmerge",
    "productName": "DroneMerge",
    "directories": {
        "output": "dist",
        "buildResources": "build"
    },
    "files": [
        "src/**/*",
        "package.json"
    ],
    "win": {
        "target": "nsis",
        "icon": "build/icon.ico"
    },
    "mac": {
        "target": {
            "target": "dmg",
            "arch": [
                "arm64",
                "x64"
            ]
        },
        "icon": "build/icon.icns",
        "category": "public.app-category.utilities"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowToChangeInstallationDirectory": true
    }
}